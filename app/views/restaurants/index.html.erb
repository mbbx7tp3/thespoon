<h1> Resturants <h1>

<form action="/restaurants" method="get">
  <input type="text" name="food_type" placeholder="what king of food?">
  <input type="submit">
</form>

<ul>
<% @restaurants.each do |id, restaurant|  %>
  <li>

    <%= link_to restaurant[:name], restaurant_path(id) %>
    (<%= restaurant[:address] %>)
  </li>
<% end %>

</ul>
